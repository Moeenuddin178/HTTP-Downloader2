<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="15dp"
    android:paddingEnd="20dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:id="@+id/copyUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/copyIco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/copy" />

        <TextView
            android:id="@+id/copyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/copyIco"
            android:text="@string/copy_download_url"
            android:textColor="#000" />

        <TextView
            android:id="@+id/downloadUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/copyText"
            android:singleLine="true"
            android:layout_toEndOf="@id/copyIco"
            android:textColor="#777" />
    </RelativeLayout>

    <TextView
        android:id="@+id/refreshLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/refresh"
        android:drawablePadding="15dp"
        android:gravity="start|center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/refresh_download_link"
        android:textColor="#000" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:animateLayoutChanges="true"
        android:gravity="center|start"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:labelFor="@id/offset_text"
            android:text="Start from: " />

        <EditText
            android:id="@+id/offset_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/round"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:maxLength="13"
            android:paddingStart="10dp"
            android:paddingTop="2dp"
            android:paddingEnd="10dp"
            android:paddingBottom="2dp" />

        <Spinner
            android:id="@+id/offset_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drop_down" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="7dp"
            android:id="@+id/offsetWarning"
            android:src="@drawable/warning"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:animateLayoutChanges="true"
        android:gravity="center|start">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:labelFor="@id/limit_text"
            android:text="Stop at: " />

        <EditText
            android:id="@+id/limit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/round"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="13"
            android:selectAllOnFocus="true"
            android:paddingStart="10dp"
            android:paddingTop="2dp"
            android:paddingEnd="10dp"
            android:paddingBottom="2dp" />

        <Spinner
            android:id="@+id/limit_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drop_down" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="7dp"
            android:id="@+id/limitWarning"
            android:src="@drawable/warning"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2000"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/add_menu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="@drawable/round_tr"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="7dp"
        android:paddingEnd="15dp"
        android:paddingBottom="7dp"
        app:backgroundTint="#fff">

        <TextView
            android:id="@+id/simpleMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/download"
            android:gravity="center|start"
            android:lines="1"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="  Start new Download" />

        <TextView
            android:id="@+id/browser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/browser_icon"
            android:gravity="center|start"
            android:lines="1"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="  Download from browser" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/from_shared"
            android:gravity="center|start"
            android:lines="1"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:id="@+id/fromShared"
            android:text="  Add shared task" />

        <TextView
            android:id="@+id/pauseAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/pause"
            android:gravity="center|start"
            android:lines="1"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="  Pause all downloads" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/join"
            android:id="@+id/fileJoiner"
            android:gravity="center|start"
            android:lines="1"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="  File joiner" />

        <TextView
            android:id="@+id/advancedDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/advanced"
            android:gravity="center|start"
            android:lines="1"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="  Advanced download" />

        <TextView
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/settings"
            android:gravity="center|start"
            android:lines="1"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="  Settings" />
    </LinearLayout>
</RelativeLayout>